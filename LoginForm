public class LoginForm extends
Frame implements 
ActionListener{
   Label lblUsername,lblPassword,lblConfirmPassword;
   TextField tfUsername, tfPassword, tfConfirmPassword;
   Button btnRegister;

  public RegisterForm(){
     lblUsername = new
  Label("Username:");
     lblPassword = new
  Label("Password");
     lblConfirmPassword = new
  Label("Confirm Password");
    tfUsername = new TextField();
    tfPasssword = new TextField();

tfPassword.setEchoChar('\u25CF');
    tfConfirmPassword = new TextField();

tfConfirmPassword.setEchoChar('\u25CF');
    btnRegister = new
   Button("Register");

 setLayout(new GridLayout(4, 2));
        setBackground(new Color(255,218,232)); 

        lblUsername.setFont(new Font("Arial", Font.BOLD, 16));
        lblPassword.setFont(new Font("Arial", Font.BOLD, 16));

